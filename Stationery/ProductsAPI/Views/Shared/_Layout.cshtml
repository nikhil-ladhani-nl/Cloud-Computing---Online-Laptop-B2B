<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", false)
    @section scripts {
        @Scripts.Render("~/bundles/app")
    }
    <script src="~/Content/JavaScript.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/Stationery/")css/owl.carousel.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/Stationery/")style.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/Stationery/")css/responsive.css">
</head>
<body>
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="http://localhost:51630/">WiNiBro<span>Stationery</span></a></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Stationery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        <li><a href="http://localhost:50093/index.html">Catalogue</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/Content/Stationery/js/")owl.carousel.min.js"></script>
    <script src="@Url.Content("~/Content/Stationery/")js/jquery.sticky.js"></script>
    <script src="@Url.Content("~/Content/Stationery/")js/jquery.easing.1.3.min.js"></script>
    <script src="@Url.Content("~/Content/Stationery/")js/main.js"></script>
</body>
</html>
